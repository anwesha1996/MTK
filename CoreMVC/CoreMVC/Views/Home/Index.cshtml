@model IEnumerable<CoreMVC.Models.Mind>

@{
    ViewData["Title"] = "Index";
}

<h2>Campus Minds</h2>

<p>
    <a asp-action="Create">New Mind</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Track)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Track)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
